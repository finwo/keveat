    "@finwo/di": "^1.2.5",
    "@finwo/router": "^0.5.3",
    "@finwo/router-fastify": "^0.5.3",
    "dotenv": "^17.2.3",
    "envalid": "^8.1.0",
    "fastify": "^5.6.1",
    "level": "^10.0.0",
    "reflect-metadata": "^0.2.2"
  }
}
